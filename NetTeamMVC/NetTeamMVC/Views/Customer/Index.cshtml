@{
}

@model List<NetTeamMVC.Models.CustomerModel>


<h1>Clientes<a class="btn btn-success"> Nuevo Cliente</a></h1>

<div class="row">
    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th></th>

            </tr>
        </thead>
         <tbody>

            @foreach (var customer in Model)
            {
            <tr>
                <th>@customer.Id</th>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td><a class="btn btn-info" href="">Ver detalle</a></td>
            </tr>                
            }
        </tbody>

        


    </table>


</div>
