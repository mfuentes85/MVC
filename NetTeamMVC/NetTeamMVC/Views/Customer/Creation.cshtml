@model NetTeamMVC.Models.CustomerModel 




<div class="card">
    <div class="card-header">
        Agregar Cliente
    </div>
    <div class="card-body">

        <form asp-action="Save"> 
            <div class="mb-3">
                <label class="form-label" asp-for="Id">Id</label>
                <input asp-for="Id" type="text" class="form-control" placeholder="Identificador">
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Name">Nombre</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Nombre del cliente">
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Address">Dirección</label>
                <input asp-for="Address" type="text" class="form-control" placeholder="Dirección">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Guardar</button>
                     
                
            </div>

             
        </form>




    </div>


</div>
